<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3 col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages' %>

      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control', autofocus: true %>

      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>

      <%= f.label :mobile_number, "Mobile" %>
      <%= f.text_field :mobile_number, placeholder: "Mobile", class: 'form-control' %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email", class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: 'form-control' %>

      <%= f.label :location %>
      <%= f.text_field :location, placeholder: "Location", class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>